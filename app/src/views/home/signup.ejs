<!-- 회원가입 클라이언트 -->

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Funto - 쉬운 투자의 시작</title>

    <link rel="stylesheet" href="/css/home/signin.css">
    <script src="/js/home/signup.js" defer></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
  </head>
  <body>
    <header class="d-flex align-items-center mt-3">
      <div class="container text-center">
          <h1 class="mb-1">FunTo</h1>
          <h3 class="mb-5"><em>재밌고 쉬운 투자</em></h3>
      </div>
    </header>
    <div class="form">
      <form method = "post" name="signupForm" action="index.html" class="mx-auto m-5 container">
        <input type="text" class="mb-3 form-control" id="id" size="10" placeholder="아이디" autofocus>
        <input type="password" class="mb-3 form-control" id="password" placeholder="비밀번호">
        <input type="password" class="mb-3 form-control" id="password-check" placeholder="비밀번호 확인">
        <input type="text" class="mb-3 form-control" id="name" placeholder= "이름"> 
        <input type="email" class="mb-3 form-control" id="email" placeholder="이메일">

        <p class="button" id="signupbtn">회원가입</p>
        <p class="message">이미 회원 이신가요? <a href="/signin">로그인 </a></p>
      </form>
    </div>
  </body>
</html>
